        <!-- debut -->
        {% for data in reservation %}
        <div class="sectionaq">
            <div class="demcon">
                <h6>Réservation</h6>
                <div class="plosa">
                    <div class="nouvie3">
                        {% if data.user.gender == 1 %}
                            <img src="{{ asset('bundles/basenroho/img/homme_1.jpg') }}"/>
                        {% else %}
                            <img src="{{ asset('bundles/basenroho/img/femme_1.jpg') }}"/>
                        {% endif %}
                    </div>
                    <p class="prixnuit">
                        {% if data.user.gender == 1 %} Passager {% else %} Passagère {% endif %}
                        <br/>
                        <strong><a href="{{ path('nroho_base_profil',  { 'id': data.user.id }) }}">{{ data.user.secondename }}</a></strong>
                    </p>
                </div>
                <div class="choirc">
                    <p class="ploso">
                        <strong>{{ data.nombre }}</strong> place(s)
                    </p>
                </div>
            </div>
        </div>
        <div class="supprimer">
            {% if data.etat == 2 %}
                <p><a href="{{ path('nroho_base_demande_no', { 'id': data.id }) }}" onclick="return confirm('Voulez-vous vraiment supprimer cette annonce ?');">Refuser</a></p>
                <p><a href="{{ path('nroho_base_demande_yes',  { 'id': data.id }) }}">Accepter</a></p>
            {% elseif data.etat == 1 %}
                <p><a href="{{ path('nroho_base_Demande_cancel',  { 'id': data.id }) }}" onclick="return confirm('Voulez-vous vraiment annuller cette demande de réservation?');">Annuler</a></p>
                <p>Acceptée</p>    
            {% elseif data.etat == 0 %}
                <p>Refusée</p>
            {% endif %}
        </div>
        {% endfor %}
