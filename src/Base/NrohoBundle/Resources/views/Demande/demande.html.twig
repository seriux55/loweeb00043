                </div>
                <div class="choirc" style="width : 27%;">
                    <p class="ploso">
                        <strong>{{ data.nombre }}</strong> place(s)
                    </p>
                    {% if data.etat == 1 %}
                        <div class="nouveau101">
                            <h4><img src="{{ asset('bundles/basenroho/img/phone.png') }}" alt=""/>&nbsp;{{ data.product.user.phone }}</h4>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="supprimer">
            {% if data.etat == 3 %}
                <p>Annulée</p>
            {% elseif data.etat == 2 %}
                <p><a href="{{ path('nroho_base_Demande_cancel',  { 'id': data.id }) }}" onclick="return confirm('Voulez-vous vraiment annuller cette demande de réservation?');">Annuler</a></p>
                <p>En attente</p>
            {% elseif data.etat == 1 %}
                <p>Acceptée</p>    
            {% elseif data.etat == 0 %}
                <p>Refusée</p>
            {% endif %}
        </div>
